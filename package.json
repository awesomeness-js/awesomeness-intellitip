{
	"name": "awesomeness-intellitip",
	"displayName": "Awesomeness Intellitip",
	"description": "Sweet ass tool tips based on your docs",
	"version": "1.0.4",
	"type": "commonjs",
	"main": "./extension.js",
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/awesomeness-js/awesomeness-intellitip.git"
	},
	"publisher": "awesomeness",
	"engines": {
		"vscode": "^1.97.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:javascript"
	],
	"contributes": { 
		"configuration": {
			"title": "Awesomeness Configuration",
			"properties": {
				"schemas": {
					"@schemas": "schemas"
				},
				"uiComponents": {
					"@ui": "awesomeness-ui/components"
				},
                "customTypes":{
                    "thing":{
                        "description": "A custom type for things",
                        "_info": true,
                        "triggers": {
                            "@thing": "custom-types/thing"
                        },
                        "contentFunctionLocation": "./project-root/some/place/thing.js"
                    }
                }
            }
		},
		"languages": [{
			"id": "javascript"
		}]
	},
	"devDependencies": {
		"@types/vscode": "^1.97.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"eslint": "^9.19.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1"
	}
}
